<h1>Welcome to the Free Crypto Scrapping Service</h1>
<p>Please choose your currency :</p>

<div class="container-fluid">
	<div class="row">

		<div class="col-lg-3 border rounded bg-light" style="background-color: yellow; padding: 10px;">
			<%= form_for :currency_form do |f| %>
				<div class="form-group">
					<select name="currency_id" class="form-control">
						<%= Currency.all.each do |element| %>
						<option value="<%= element.id %>"><%= element.currency_name %></option>
						<% end %>
					</select>
				</div>
				<%= f.submit "Get the price!", class: "btn btn-success" %>
			<% end %>
		</div>

		<div class="col-lg-offset-1 col-lg-3 border rounded bg-light" style="background-color: pink; padding-left: 10px; padding-top: 20px;">
				<% if @currency != nil %>
					Here is the price of the chosen currency:
					<br />
	  			<%= @currency.currency_name %> : <b><%= @currency.currency_value %></b>
	  			<% else %>
	  			Your result is waiting here!
	  		<% end %>
		</div>

	</div>
</div>